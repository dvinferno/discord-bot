---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>404</title>
  </head>
  <body
    class="flex min-h-screen items-center justify-center bg-gradient-to-r from-indigo-900 via-purple-900 to-pink-900"
  >
    <div
      class="text-center p-10 bg-gray-800 rounded-3xl shadow-2xl max-w-lg w-full animate-fade-in"
    >
      <!-- Header Section -->
      <h1 class="text-6xl font-bold text-white mb-6">404</h1>
      <p class="text-lg text-gray-300 mb-4">
        Oops! The page you're looking for doesn't exist.
      </p>

      <!-- Navigation Button Section -->
      <div class="pb-8">
        <a
          href="/"
          class="btn text-white bg-indigo-600 rounded-md shadow-md hover:bg-indigo-700"
          >Go Home</a
        >
      </div>

      <!-- Footer Section -->
      <p class="text-sm text-gray-400">
        If you think this is a mistake, please contact support or check the <a
          href="#"
          class="text-indigo-300">Administrator</a
        >.
      </p>
    </div>

    <style>
      @keyframes fade-in {
        from {
          opacity: 0;
          transform: translateY(-10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .animate-fade-in {
        animation: fade-in 0.6s ease-out;
      }
    </style>
  </body>
</html>

---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div id="dashboard" class="flex min-h-screen items-center justify-center">
    <div
      class="text-center p-10 bg-gray-800 rounded-3xl shadow-2xl max-w-4xl w-full"
    >
      <!-- Header Section -->
      <h1 class="text-4xl font-bold text-white mb-6">
        Welcome to Your Dashboard!
      </h1>
      <p class="text-lg text-gray-300 mb-4">
        Manage your bot, settings, and other features here.
      </p>

      <!-- Dashboard Sections -->
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <!-- Section 1 -->
        <div class="bg-gray-700 p-6 rounded-xl shadow-md">
          <h2 class="text-2xl font-semibold text-white mb-4">Bot Overview</h2>
          <p class="text-gray-300">
            Quick view of your bot's performance, stats, and activities.
          </p>
          <a href="#" class="text-indigo-300 hover:underline mt-4 inline-block"
            >View Details</a
          >
        </div>

        <!-- Section 2 -->
        <div class="bg-gray-700 p-6 rounded-xl shadow-md">
          <h2 class="text-2xl font-semibold text-white mb-4">Settings</h2>
          <p class="text-gray-300">
            Customize your bot's configuration, preferences, and settings.
          </p>
          <a href="#" class="text-indigo-300 hover:underline mt-4 inline-block"
            >Manage Settings</a
          >
        </div>

        <!-- Section 3 -->
        <div class="bg-gray-700 p-6 rounded-xl shadow-md">
          <h2 class="text-2xl font-semibold text-white mb-4">Notifications</h2>
          <p class="text-gray-300">
            View and manage notifications for your botâ€™s activities.
          </p>
          <a href="#" class="text-indigo-300 hover:underline mt-4 inline-block"
            >Check Notifications</a
          >
        </div>
      </div>

      <!-- Footer Section -->
      <div class="mt-8 text-sm text-gray-400">
        <p>
          Need help? Visit our <a href="#" class="text-indigo-300"
            >Help Center</a
          >
          or <a href="#" class="text-indigo-300">Contact Support</a>.
        </p>
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.6s ease-out;
  }
</style>
